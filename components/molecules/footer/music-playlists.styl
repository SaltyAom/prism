#music-footer
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    width calc(100% - 16px)
    animation playlists-fade-in .5s ease-out 0s 1

@keyframes playlists-fade-in
    0%
        opacity 0
        transform scale(.85)

    50%
        opacity 0
        transform scale(.85)
