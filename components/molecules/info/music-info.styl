#music-info
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    padding 8px 2.5%
    margin 8px 0 16px 0
    animation music-info-appear .5s ease-out 0s 1

    @media screen and  (max-width 568px) and (min-height 768px)
        margin-bottom 20px

    &.-align-left
        align-items flex-start
        padding-left 24px

@keyframes music-info-appear
    0%
        opacity 0
        transform scale(.85)

    20%
        opacity 1
        transform scale(.85)