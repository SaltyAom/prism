.music-list
    display flex
    flex-direction row
    justify-content flex-start
    align-items center
    width 100%
    padding 4px
    margin 4px 0
    border-radius 4px
    outline none
    cursor pointer
    transition background-color .15s ease-out

    &:hover,
    &:focus
        background-color rgba(255,255,255,.1)

    &.-light
        &:hover,
        &:focus
            background-color rgba(0,0,0,.1)

    & > .cover
        width 52px
        height 52px
        border-radius 4px

    & > .info
        flex 1
        display flex
        flex-direction column
        justify-content center
        align-items flex-start
        padding-left 16px