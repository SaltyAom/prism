#controller
    display flex
    flex-direction row
    justify-content center
    align-items center
    width 100%
    margin 8px 0 16px 0
    animation controller-appear .5s ease-out 0s 1

    @media screen and  (max-width 568px) and (min-height 768px)
        margin-top 20px

@keyframes controller-appear
    0%
        opacity 0
        transform scale(.85)

    30%
        opacity 0
        transform scale(.85)